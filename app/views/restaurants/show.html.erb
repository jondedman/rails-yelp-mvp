<div class="container"><p><%= @restaurant.name %></p>
<hr>
<p><%= @restaurant.address %></p>
<hr>
<p>Category: <%= @restaurant.category.capitalize %></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> |<span>Rating:</span> <%= review.rating %></li>
  <% end %>
</ul>
<br>
<p><%= link_to "Back to restaurants", restaurants_path %></p>

<p>Please leave a review for <%= @restaurant.name %></p>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
</div>
